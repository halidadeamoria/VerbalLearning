<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    tools:context=".fragment.AkunFragment">

    <RelativeLayout
        android:id="@+id/rlAccount"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:id="@+id/cvAvatar"
            app:cardCornerRadius="16dp"
            android:layout_height="90dp">
            <ImageView
                android:id="@+id/ivAvatar"
                app:civ_border_width="8dp"
                app:civ_circle_background_color="@color/white"
                android:src="@drawable/ic_avatar"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="16dp"
            android:layout_toRightOf="@id/cvAvatar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvName"
                android:textSize="30sp"
                android:fontFamily="@font/baumans_regular"
                android:textColor="@color/white"
                android:text="test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvUserSince"
                android:textSize="14sp"
                android:fontFamily="@font/baumans_regular"
                android:textColor="@color/white"
                android:text="test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:background="@drawable/background_top_corer_rounded"
        app:layout_constraintTop_toBottomOf="@+id/rlAccount"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="255dp"
        android:layout_height="255dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="false"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_animate_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>